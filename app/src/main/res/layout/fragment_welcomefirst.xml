<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animation_welcomeFirst_logo"
            android:layout_width="230dp"
            android:layout_height="230dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            app:lottie_autoPlay="true"
            app:lottie_rawRes="@raw/welcome_animation"
            app:lottie_loop="true"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/animation_welcomeFirst_logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            android:fontFamily="@font/vazir_bold"
            android:gravity="center_horizontal"
            android:text="به تیچلی خوش آمدید"
            android:textColor="@color/gray900"
            android:textSize="24sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/btn_welcomefirst_signUp"
            android:layout_marginStart="24sp"
            android:layout_marginEnd="24sp"
            android:layout_marginBottom="18dp"
            android:fontFamily="@font/vazir_medium"
            android:gravity="center_horizontal"
            android:text="تیچلی به شما کمک می کند تا دانش آموزان خود را \n بهتر مدیریت کنید"
            android:textColor="@color/gray900"
            android:textSize="18sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_welcomefirst_signUp"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="250dp"
            android:layout_height="55dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="24dp"
            android:fontFamily="@font/vazir_medium"
            android:text="ثبت نام"
            android:textSize="15sp" />


    </RelativeLayout>

</FrameLayout>